<div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-4 col-xs-6 thumb">
        <a class="thumbnail" >
          <%= image_tag @article.image.url(:article) %>
          <div class="ratio" style="background-image:url"></div>
        </a>
      </div>
      <h1><%= @article.title %></h1>
       <p><%= markdown(@article.content) %></p>
    <br>
      <hr>
      <% if @article.comments.count == 0 %>
        <h3> Be the first to comment. </h3>
      <% else %>
        <h3><%= pluralize @article.comments.count, 'comment' %></h3>
      <% end %>
    <br>
      <%= render @article.comments %>
      <%= render 'comments/form' %>
    <br>
  </div>
</div>
