
<% @Articles.each do |article| %>
  <h2><%= link_to article.title, article %></h2>
<br>
  <p><%= article.content %></p>
<br>
  <%= link_to "Edit", edit_article_path(article) %>
  <%= link_to "Delete", articles_path(article), method: :delete, data: { confirm: "You are attempting to delete the post. Click 'Ok' to delete." } %>
<% end %>
<br>
